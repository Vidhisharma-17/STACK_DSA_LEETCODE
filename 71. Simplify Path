class Solution {
public:
    string simplifyPath(string path) {
        string token;
        stringstream ss(path);
        vector<string> st;

        while (getline(ss, token, '/')) {
            if (token == "" || token == ".") continue;

            if (token == "..") {
                if (!st.empty()) st.pop_back(); // fix: only pop if not empty
            } else {
                st.push_back(token);
            }
        }

        string result;
        for (const string& dir : st) {
            result += "/" + dir;
        }

        return result.empty() ? "/" : result;
    }
};
